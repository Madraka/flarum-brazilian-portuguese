    "keywords": ["portuguese","language","locale","localization","translation"],
    "license": "MIT",
    "authors": [
	    {
		    "name": "Kassius Mercurius",
		    "email": "kassivs@gmail.com",
		    "homepage": "https://www.kassius.org"
	    }
    ],
    "support": {
	    "issues": "https://github.com/kassius/flarum-brazilian-portuguese/issues",
